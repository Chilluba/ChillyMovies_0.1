{
  "name": "chillymovies-app",
  "productName": "ChillyMovies",
  "version": "0.1.0",
  "description": "A powerful desktop application for downloading movies, TV shows, and YouTube videos",
  "author": {
    "name": "ChillyMovies Team",
    "email": "team@chillymovies.com"
  },
  "homepage": "https://chillymovies.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/chillymovies/chillymovies-app.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "electron . --no-sandbox",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "vite",
    "build:electron": "tsc -p electron/tsconfig.json",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "test": "jest"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/webtorrent": "^0.110.0",
    "axios": "^1.7.2",
    "electron-store": "^10.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.4.1",
    "webtorrent": "^2.1.27",
    "youtube-dl-exec": "^3.0.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.30",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@vitejs/plugin-react": "^4.5.1",
    "autoprefixer": "^10.4.16",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.chillymovies.app",
    "productName": "ChillyMovies",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true
}
